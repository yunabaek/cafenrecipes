<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
		http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd">

	<!-- 인터셉트 -->
	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/listForm" />
			<mvc:mapping path="/list" />
			<mvc:mapping path="/writeForm" />
			<mvc:mapping path="/write" />
			<mvc:mapping path="/updateForm" />
			<mvc:mapping path="/update" />
			<mvc:mapping path="/write" />
			<mvc:mapping path="/detail" />
			<mvc:mapping path="/myProfile" />
			<mvc:mapping path="/reserch" />
			<bean class="kr.co.cafenrecipes.utils.LoginInterceptor" />
		</mvc:interceptor>
	</mvc:interceptors>

</beans>
